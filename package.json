{
  "name": "concolor",
  "version": "1.1.0",
  "description": "Console colors for strings templates in node.js",
  "license": "MIT",
  "main": "concolor.js",
  "types": "concolor.d.ts",
  "author": "Vladyslav Dukhin <vladyslav.dukhin@gmail.com>",
  "scripts": {
    "test": "npm run lint && npm run types && node ./test.js",
    "types": "tsc -p tsconfig.json",
    "lint": "eslint . && prettier -c \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\"",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \".*rc\""
  },
  "engines": {
    "node": "18 || 20 || 21"
  },
  "publishConfig": {
    "provenance": true
  },
  "keywords": [
    "concolor",
    "metarhia",
    "color",
    "colors",
    "colour",
    "console",
    "terminal",
    "ansi",
    "esc",
    "template",
    "theme",
    "style"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metarhia/concolor.git"
  },
  "bugs": {
    "url": "https://github.com/metarhia/concolor/issues",
    "email": "vladyslav.dukhin@gmail.com"
  },
  "homepage": "https://github.com/metarhia",
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/tshemsedinov"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "eslint": "^8.56.0",
    "eslint-config-metarhia": "^8.2.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^13.24.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
